#!/bin/bash
# Prints the percentage battery power available: just the number, no
# trailing "%" sign.

# TODO:
# - Linux version would almost certainly barf on dual batteries

function _p_powerpercent () {
    if [ -e /sys ]
    then
        # On a Linux system:
        if [ -d /sys/class/power_supply/BAT?/ ] # Check there's a battery
        then
            cat /sys/class/power_supply/BAT?/capacity
        fi
    elif [ "$(command uname -a | command grep Darwin > /dev/null ; echo $?)" == "0" ]
    then
        # On a Mac:
        pmset -g batt | command tail -1 | command awk '{print $2}' | command tr -d ";" | command tr -d "%"
    else
        # On an unknown system:
        echo -n "???"
    fi
}

